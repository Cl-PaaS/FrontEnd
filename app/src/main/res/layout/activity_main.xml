<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C6EE5"
    tools:layout_editor_absoluteY="25dp">

    <!-- Title -->

    <!-- Description -->

    <!-- Hashtag -->

    <!-- Lock Icon -->
    <TextView
        android:id="@+id/mainTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hssantokki_regular"
        android:gravity="center"
        android:text="누구쇼?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/mainDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="땡땡님, 지금까지 \n12번 만큼 \n폰을 지켰어요!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="107dp" />

    <TextView
        android:id="@+id/hashTagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tag_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="#폰지키미"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="230dp" />

    <!-- Card View -->
    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:src="@drawable/lockin"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="248dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="230dp"
        android:layout_height="287dp"
        app:cardCornerRadius="17dp"
        app:cardElevation="4dp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="459dp">

        <!-- 내부 ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- 카드 제목 -->
            <TextView
                android:id="@+id/cardTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메시지 검사"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 카드 설명 -->
            <TextView
                android:id="@+id/cardDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="피싱 메시지 검사하기"
                android:textColor="#777777"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardTitleTextView" />

            <!-- 이미지 -->

            <!-- 검사 시작 버튼 -->

            <ImageView
                android:id="@+id/messageImageView"
                android:layout_width="80dp"
                android:layout_height="77dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/message_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardDescriptionTextView" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="검사 시작하기"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#F57171"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/messageImageView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Page Indicator -->
    <LinearLayout
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="762dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/indicator" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
