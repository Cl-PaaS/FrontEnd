<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C6EE5"
    tools:layout_editor_absoluteY="25dp">

    <!-- Title -->
    <TextView
        android:id="@+id/mainTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hssantokki_regular"
        android:gravity="center"
        android:text="누구쇼?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/mainDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="땡땡님, 지금까지 \n12번 만큼 \n폰을 지켰어요!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/mainTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Hashtag -->
    <TextView
        android:id="@+id/hashTagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tag_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="#폰지키미"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/mainDescriptionTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp" />

    <!-- Lock Icon -->
    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="170dp"
        android:layout_height="146dp"
        android:src="@drawable/lockin"
        app:layout_constraintTop_toBottomOf="@id/hashTagTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp" />

    <!-- Card View -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="230dp"
        android:layout_height="287dp"
        app:cardCornerRadius="17dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/lockIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- 내부 ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- 카드 제목 -->
            <TextView
                android:id="@+id/cardTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메시지 검사"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 카드 설명 -->
            <TextView
                android:id="@+id/cardDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피싱 메시지 검사하기"
                android:textColor="#777777"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardTitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <!-- 이미지 -->
            <ImageView
                android:id="@+id/messageImageView"
                android:layout_width="80dp"
                android:layout_height="77dp"
                android:src="@drawable/message_icon"
                app:layout_constraintTop_toBottomOf="@id/cardDescriptionTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <!-- 검사 시작 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="검사 시작하기"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#F57171"
                app:layout_constraintTop_toBottomOf="@id/messageImageView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Page Indicator -->
    <LinearLayout
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/indicator" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
