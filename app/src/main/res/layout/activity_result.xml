<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F8"
    tools:context=".ResultActivity">

    <!-- Title -->
    <ImageView
        android:id="@+id/resultTitleTextImage"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:src="@drawable/nugushow_blue"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="땡땡님의 진단 결과예요."
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="102dp" />

    <LinearLayout
        android:id="@+id/resultBox"
        android:layout_width="400dp"
        android:layout_height="222dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="167dp">

        <ImageView
            android:id="@+id/emojiImageView"
            android:layout_width="80dp"
            android:layout_height="176dp"
            android:src="@drawable/result_100" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="80%"
            android:textColor="#333333"
            android:textSize="48sp"
            android:textStyle="bold" />

        <!-- Message -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="/좋음"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/safeMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="해당 메시지는 안전해요."
            android:textColor="#777777"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/checkAnotherButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다른 메시지 검사하기"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#407FFF"
        app:cornerRadius="8dp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="420dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
